# IoT Presence Music System Environment Configuration

# Backend Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# MQTT Broker Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_BROKER_USERNAME=
MQTT_BROKER_PASSWORD=
MQTT_CLIENT_ID=iot-music-server

# Frigate Configuration
FRIGATE_URL=http://localhost:5000
FRIGATE_API_KEY=

# Database Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/iot-music
MONGODB_DB=iot-music

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Music Services
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Phone Configuration
ZONE1_IP=192.168.1.101
ZONE2_IP=192.168.1.102
ZONE3_IP=192.168.1.103
MAIN_PHONE_IP=192.168.1.100

# Camera Settings
CAMERA_FPS=5
CAMERA_RESOLUTION=640x480
DETECTION_INTERVAL=2000
DETECTION_SENSITIVITY=0.7

# Music Settings
DEFAULT_VOLUME=50
CROSSFADE_DURATION=3000
AUTO_PLAY_ENABLED=true
ZONE_TRANSITION_ENABLED=true

